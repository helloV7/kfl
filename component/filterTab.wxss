/* component/filterTab.wxss */
.filter-tab-layout{
  width: 750rpx;
  height: 85rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(148,148,148,1);
  display: inline-block;
}
.item image{
  margin-left: 12rpx;
  width: 10rpx;
  height: 19rpx;
}
.modal{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  font-size: 0;
}
.filter-layout{
  position: absolute;
  left: 90rpx;
  right: 0;
  top: 0;
  bottom: 0;
  background: white;
  display: flex;
  flex-direction: column;
}
.filter-layout .bottom{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 135rpx;
}
.filter-layout .bottom .reset{
  width:280rpx;
  height:85rpx;
  border:2rpx solid rgba(102, 102, 102, 1);
  border-radius:43rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  color:rgba(102,102,102,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.filter-layout .bottom .confirm{
  width:280rpx;
  height:85rpx;
  background:rgba(207,163,88,1);
  border-radius:43rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.filter-group{
  padding: 35rpx 0 15rpx 35rpx;
  position: relative;
}
.filter-group .name{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.show-all{
  position: absolute;
  right: 37rpx;
  top: 49rpx;
}
.filter-group .show-all-text{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.filter-group .show-all-image{
  width: 19rpx;
  height: 11rpx;
}
.filter-item {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-flow: row;
  flex-wrap: wrap;

}
.filter-item .item{
  margin-right: 35rpx;
  margin-top: 32rpx;
  width:170rpx;
  height:54rpx;
  border:2rpx solid rgba(170, 170, 170, 1);
  border-radius:5rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.filter-item  .item.sel{
  width:170rpx;
  height:54rpx;
  background:rgba(207,163,88,1);
  border-radius:5rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:70rpx;
  border: none;
}
.filter-input-layout{
  margin-top:35rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}
.filter-input{
  font-size:28rpx;
  width:255rpx;
  height:70rpx;
  border:2rpx solid rgba(221, 221, 221, 1);
  border-radius:5rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.filter-input-split{
  width:30rpx;
  height:3rpx;
  background:rgba(51,51,51,1);
  display: inline-block;
  margin: 0 25rpx;
}