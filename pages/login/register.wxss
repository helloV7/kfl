/* pages/login/register.wxss */
@import "/pages/common/common.wxss";
.tab{
  font-size: 32rpx;
  color: #777777;
}
.sel{
  padding-bottom: 23rpx;
  color: #C89644;
  border-bottom: 6rpx #CFA358 solid;

}
.input-layout{
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-top: 92rpx;
}
.input-item{
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
}
.input-label{
  font-size:31rpx;
  font-family:PingFangSC-Regular;
  color:rgba(51,51,51,1);
}
.input{
  margin-left: 54rpx;
  color: #000;
  font-size: 31rpx;
  flex:1;
}
.input-placeholder{
  color: #AAA;
  font-size: 31rpx;
}
.line{
  margin-top: 32rpx;
  height: 2rpx;
}
.show-password-image{
  width:31rpx;
  margin-right: 29rpx;
}
.get-captcha{
  color: #D37526;
  font-size: 24rpx;
  border:2rpx solid rgba(211, 117, 38, 1);
  border-radius:5rpx;
  padding: 19rpx 16rpx;
}
.get-captcha.loading{
  border: 0;
}
.audit-code-image{
  width:40rpx;
  margin-right: 25rpx;
}
.btn.register{
  margin:120rpx 62rpx 49rpx;
  display: block;
  width: auto;
  height: 95rpx;
  font-size: 32rpx;
}
.to-login{
  font-size: 30rpx;
  color: #333;
}
.bottom-view{
  font-size:26rpx;
  color:#808080;
  bottom:38rpx;
  text-align:center;
  position:absolute;
  left:0;
  right:0;

}