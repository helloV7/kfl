page{
  width: 100%;
  height: 100%;
  background: rgb(244, 244, 244);
}
/* .container{

} */
.question-layout{
  padding: 33rpx;
  width: calc(750rpx - 33rpx - 33rpx);
  background: white;
  position: relative;
}
.question{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: block;
}
.answer{
  width: calc(750rpx - 33rpx - 33rpx);
  margin-top: 30rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  display: block;
  white-space: pre-line;
}
.question-layout::after{
  position: absolute;
  content: "";
  left: 28rpx;
  right: 0;
  bottom: 0;
  height: 2rpx;
  background: #E0E0E0;
}
.question-layout:last-of-type::after{
  content:none;
}