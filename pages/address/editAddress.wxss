/* pages/address/editAddress.wxss */
page{
  background: rgb(244, 244, 244);
  width: 100%;
  height: 100%;
  font-size: 0;
}
.input-layout{
  width:100%;
  height:90rpx;
  background:rgba(255,255,255,1);
  position: relative;
  display: inline-flex;
  align-items: center;
}
.input-layout.address{
  height: 160rpx;
  display: block;
}
.input-layout.address .label{
  top: 31rpx;
}
.input-layout.address .input{
  position: absolute;
  top:26rpx;
  right: 26rpx;
  height: 120rpx;
  display: inline-flex;
  justify-content: flex-start;
  align-items: flex-start;
  width: auto;
}
.input-layout::after{
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height:2px;
  background:rgba(224,224,224,1);
}
.input-layout .label{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  position: absolute;
  left: 26rpx;
}
.input-layout .input{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: inline-block;
  position: absolute;
  left: 182rpx;
  right: 26rpx;
}
.input-placeholder{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(170,170,170,1);
}
.set-default-layout{
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.set-default-layout image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-right: 23rpx;
}
.set-default-layout label{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.save{
  width:750rpx;
  height:95rpx;
  background:rgba(207,163,88,1);
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: inline-flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
}
.sel-location-image{
  width: 13rpx;
  height: 23rpx;
  position: absolute;
  right: 0rpx;
  top: 10rpx;
}