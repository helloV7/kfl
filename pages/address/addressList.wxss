/* pages/address/addressList.wxss */
page{
  font-size: 0;
  width: 100%;
  height: 100%;
  background: #E0E0E0;
}
.scroll-y{
  flex: 1;
}
.main-layout{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.address-item-layout{
  width:750rpx;
  /* height:145rpx; */
  padding-top: 33rpx;
  padding-bottom: 30rpx;
  background:rgba(255,255,255,1);
  position: relative;
}
.address-item-layout:last-of-type:after{
  content: none;
}
.address-item-layout::after{
  content: "";
  position: absolute;
  background: #E0E0E0;
  height: 2rpx;
  left: 0;
  right: 0;
  bottom: 0;
}
.address-name {
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  /* position: absolute;
  left: 30rpx;
  top: 33rpx; */
  margin-left: 30rpx;
}
.address-phone {
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  /* position: absolute;
  top: 37rpx;
  left: 149rpx; */
  margin-left: 24rpx;
  display: inline;
}
.address-address {
  margin-left: 30rpx;
  margin-top: 27rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  display: block;
  white-space: normal;
  word-break: break-all;
  color:rgba(102,102,102,1);
  /* position: absolute;
  left: 30rpx;
  top: 86rpx; */
  width: calc(100% - 60rpx);
}
.address-isdefaule {
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(215,35,35,1);
  display: inline-block;
} 
.bottom-layout{
  width:750rpx;
  height:95rpx;
  background:rgba(207,163,88,1);
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}