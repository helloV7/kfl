/* pages/address/addressListManagement.wxss */
page{
  font-size: 0;
  width: 100%;
  height: 100%;
  background: #E0E0E0;
}
.scroll-y{
  flex: 1;
}
.main-layout{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.address-item-layout{
  width:750rpx;
  /* height:230rpx; */
  background:rgba(255,255,255,1);
  position: relative;
  margin-bottom: 20rpx;
  padding-top: 33rpx;
}
.address-item-layout:last-of-type:after{
  content: none;
}

.address-name {
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  margin-left: 30rpx;
  /* position: absolute;
  left: 30rpx;
  top: 33rpx; */
}
.address-phone {
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  margin-left: 30rpx;
  display: inline;
  /* position: absolute;
  top: 37rpx;
  left: 149rpx; */
}
.address-address {
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  width: calc(100% - 60rpx);
  margin-left: 30rpx;
  margin-top: 27rpx;
  margin-bottom: 30rpx;
  white-space: normal;
  word-break: break-all;
  /* position: absolute;
  left: 30rpx;
  top: 86rpx; */
}
.address-isdefaule {
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(215,35,35,1);
  display: inline-block;
} 
.bottom-layout{
  width:750rpx;
  height:95rpx;
  background:rgba(207,163,88,1);
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.control-layout{
  width:750rpx;
  height:85rpx;
  background:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  position: relative;
  /* top: 147rpx;
  left: 0;
  right: 0; */
}
.control-layout::before{
    content: "";
    position: absolute;
    background: #E0E0E0;
    height: 2rpx;
    left: 0;
    right: 0;
    top: 0;
}
.set-layout{
  display: flex;
  align-content: center;
}
.sel-image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.set-default-text{
  margin-left: 23rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.edit-layout{
  display: flex;
  align-items: center;
  position: absolute;
  right: 166rpx;
}
.edit-image{
  width: 32rpx;
  height: 34rpx;
}
.edit-text{
  margin-left: 17rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);

}
.del-layout{
  display: flex;
  align-items: center;
   position: absolute;
  right: 25rpx;
}
.del-image{
  width: 39rpx;
  height: 34rpx;
}
.del-text{
  margin-left: 15rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}