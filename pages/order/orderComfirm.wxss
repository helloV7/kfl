/* pages/order/orderComfirm.wxss */
page{
  font-size: 0;
  background: rgb(244, 244, 244);
  width: 100%;
  height: 100%;
}
.layout{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.scroll-y{
  flex: 1;
}
.address-hint{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-left: 29rpx;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  display: block;
}
.address-layout{
  width: 750rpx;
  height: 150rpx;
}
.address-layout image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.sel-icon{

}
.bottom-layout{
  width: 100%;
  height: 95rpx;
  background: white;
  box-shadow:0rpx -1rpx 5rpx 0rpx rgba(228,228,228,0.5);
  display: flex;
}

.bottom-layout .left{
  width:510rpx;
  height:95rpx;
  background:rgba(255,255,255,1);
  display: inline-flex;
  justify-content: flex-start;
  align-items: center;

}
.bottom-layout .right{
  flex: 1;
  height: 95rpx;
  background:rgba(207,163,88,1);
  display: inline-flex;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  align-items: center;
  justify-content: center;
}
.total-hint{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  display: inline-block;
  margin-left: 54rpx;
  margin-right: 17rpx;
  align-self: flex-start;
  margin-top: 16rpx;
}
.total-value-layout{
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  align-self: flex-start;
  margin-top: 16rpx;
}
.total-value{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(215,35,35,1);
  display: block;
}