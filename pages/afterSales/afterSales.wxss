/* pages/afterSales/afterSales.wxss */
page{
  Width: 100%;
  height: 100%;
  background: rgb(244, 244, 244);
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.container::after{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: #E0E0E0;
}
.order-number-layout.text{
  width:750rpx;
  height:90rpx;
  background:rgba(255,255,255,1);

  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);

  display: inline-flex;
  align-items: center;

  padding-left: 28rpx;
}
.item-decoration{
  position: relative;
  width:750rpx;
  height:226rpx;
  background:rgba(255,255,255,1);
}
.item-decoration .number{
  position: absolute;
  right: 20rpx;
  bottom: 25rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.item-decoration::after{
  content: "";
  position: absolute;
  left: 27rpx;
  right: 0;
  top: 0;
  background: #E0E0E0;
  height: 2rpx;
}
.type-layout{
  width:auto;
  background:rgba(255,255,255,1);
  padding: 31rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.type-layout::after{
  content: "";
  position: absolute;
  left: 27rpx;
  right: 0;
  top: 0;
  background: #E0E0E0;
  height: 2rpx;
}
.type-hint{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.type-value{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(215,35,35,1);
}
.reason{
  width: auto;
  height:320rpx;
  background:rgba(255,255,255,1);
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);

  margin-top: 20rpx;
  padding: 32rpx 29rpx;
}
.bottom-layout{

}
.hint{
  width:555rpx;
  height:63rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-left: 97rpx;
  display: block;
  margin-bottom: 34rpx;
  margin-top: 34rpx;
}
.bottom-btn-layout{
  width:100%;
  height:110rpx;
  background:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn{
  width: 380rpx;
  height:76rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn.doing{
  border:2rpx solid rgba(215, 35, 35, 1);
  border-radius:38rpx;
  color:rgba(215,35,35,1);
}
.btn.done{
  border:2px solid rgba(221, 221, 221, 1);
  border-radius:38rpx;
  color:rgba(0,0,0,1);
}
.btn.ok{
  border:1px solid rgba(200, 150, 68, 1);
  border-radius:38rpx;
  color:rgba(200,150,68,1);
}