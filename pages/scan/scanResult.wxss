/* pages/scan/scanResult.wxss */
page{
  background: rgb(244, 244, 244);
  width: 100%;
}
.top-tag{
  position: relative;
  width: 750rpx;
  height: 230rpx;
}
.top-tag image{
  width: 100%;
  height: 100%;
}
.top-tag .message{
  font-size:34rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(146,74,20,1);
  position: absolute;
  top: 53rpx;
  left: 0;
  right: 0;
  text-align: center;
}
.top-tag .score{
  position: absolute;
  left: 203rpx;
  top: 133rpx;
  display: flex;
  justify-content: center;
  align-items: baseline
}
.top-tag .cash{
  position: absolute;
  right: 203rpx;
  top: 133rpx;
  display: flex;
  justify-content: center;
  align-items: baseline
}
.top-tag .number{
  font-size:48rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(146,74,20,1);
}
.top-tag .text{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(146,74,20,1);
}
.input{
  width:calc (100% - 35rpx);
  height:95rpx;
  margin: 32rpx 35rpx;
  font-size:32rpx;
  display: block;
  text-overflow: ellipsis;
  overflow: scroll;
}
.input-decoration{
    margin-top: 30rpx;

  background:rgba(255,255,255,1);
}
.input-placeholder{
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(170,170,170,1);
}
.btn-layout{
  display: flex;
  margin: 85rpx 55rpx 0;
  justify-content: space-between
}
.btn-layout .btn{
  width:300rpx;
  height:75rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(207, 163, 88, 1);
  border-radius:38rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;

  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(200,150,68,1);
}