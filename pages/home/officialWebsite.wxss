/* pages/home/officialWebsite.wxss */
page{
  height: 100%;
}
.item-list-view{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.item-list-view .item-list{
   flex: 1;
  white-space: nowrap;
  overflow-y: scroll;
}
.top-search{
  margin: 20rpx 30rpx;
  width:690rpx;
  height:60rpx;
  background:rgba(243,243,243,1);
  border-radius:30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-search image{
  width: 31rpx;
  height: 31rpx;
}
.top-search .text{
  margin-left: 23rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
}
