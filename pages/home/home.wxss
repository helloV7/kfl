/* pages/home/home.wxss */
@import "/pages/common/common.wxss";
.banner{
  width:750rpx;
  height:280rpx;
}
.banner image{
  width:750rpx;
  height:280rpx;
  }
.banner swiper-item{
   width:750rpx;
  height:280rpx;
}
.banner-mask{
  position: absolute;
  bottom: 0;
  width:750rpx;
}
  .topGrid{
    height: 375rpx;
    display: flex;
    justify-content: space-between;
    align-content: center;
    flex-wrap: wrap;
    padding-left: 85rpx;
    padding-right: 85rpx;
    padding-top: 20rpx;
    background-color: white;
  }
 .topGrid .item{
   width: 30%;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   margin-bottom: 20rpx;
 }
  .topGrid .item image{
    width:105rpx;
    height: 105rpx;
    display: block;
  }
   .topGrid .item label{
    margin-top: 20rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(51,51,51,1);
  }

  .product-layout{
    padding-left: 30rpx;
    padding-right: 30rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    background-color: #F4F4F4;
  }
  .product-layout .item{
    margin-top: 30rpx;
    width:335rpx;
    height:200rpx;
    display: inline-block;
  }
  .product-layout .item>image{
    width:335rpx;
    height:200rpx;
    border-radius:12rpx;

  }
  .floatBtn{
    position: absolute;
    top:875rpx;
    right: 4rpx; 
  }
  .floatBtn .float-image{
    width: 115rpx;
    height: 115rpx;
    position: absolute;
    top: 0rpx;
    right: 8rpx;
  }
  .floatBtn .close{
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 0rpx;
    right: 0rpx;
  }